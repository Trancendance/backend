    "sqlite3": "^5.1.7",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.8.0",
    "@types/nodemailer": "^7.0.4",
    "@types/sequelize": "^4.28.20",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
